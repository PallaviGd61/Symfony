{% extends 'base.html.twig' %}


{% block body %}
{{ include ('home/_show.html.twig')  }}

<h3>list of users:</h3>
    
<table class="table table-striped table-middle-aligned table-borderless">
<thead>
<tr>
<th scope="col">ID</th>
<th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> Full Name</th>
<th scope="col">Email Id</th>
<th scope="col">User Name</th>
{# <th scope="col">Role</th> #}
<th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'label.actions'|trans }}</th>
</tr>
</thead>
<tbody>
{% for user in fetchUsers %}
<tr>
<td>{{ user.id }}</td>
<td>{{ user.fullName }}</td>
<td>{{ user.email }}</td>
<td>{{ user.userName }}</td>

<td class="text-right">
<div class="item-actions">
<a href="{{ path('app_edituser', {user: user.id}) }}" class="btn btn-sm btn-primary">
<i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit'|trans }}
</a>
<a href="{{ path('app_user_delete', {id: user.id}) }}" class="btn btn-sm btn-primary">
<i class="fa fa-edit" aria-hidden="true"></i> delete
</a>
</div>
</td>
</tr>
{% else %}
<tr>
<td colspan="4" align="center">No users found</td>
</tr>
        {% endfor %}
</tbody>
</table>
<a href="{{path('app_registration')}}" class="btn btn-primary">Add New User</a>
<a href="{{path('app_home')}}" class="btn btn-primary">Home</a>
</div>
{% endblock %}
